<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AutoStop"
             x:Class="AutoStop.AddPage"
             Title="AddPage"
             BackgroundColor="#F0F0F0">

    <Grid RowDefinitions="Auto, *, Auto">
        <!-- Логотип и название -->
        <StackLayout Grid.Row="0" Orientation="Horizontal" HorizontalOptions="Center" Padding="10">
            <Image Source="logo1.png" WidthRequest="50" HeightRequest="50"/>
            <Label Text="AUTOSTOP" FontSize="24" TextColor="Orange" VerticalOptions="Center"/>
        </StackLayout>
        <!-- Form for adding a ride -->
        <ScrollView Grid.Row="1">
            <Border BackgroundColor="White" Stroke="Black" Margin="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <StackLayout Padding="20">
                    <!-- Location Picker -->
                    <Label Text="Откуда" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Entry x:Name="From" Placeholder="Введите место отправления"/>

                    <Label Text="Куда" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Entry x:Name="To" Placeholder="Введите пункт назначения"/>

                    <!-- Date and Time Picker -->
                    <Label Text="Дата поездки" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <DatePicker x:Name="TravelDate" Format="dd MMMM yyyy" HorizontalOptions="Center"/>

                    <!-- Number of Passengers -->
                    <Label Text="Кол-во попутчиков" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label x:Name="PassCountLabel" Text="1" HorizontalOptions="Center"/>
                    <Stepper x:Name="PassCount" Minimum="1" Maximum="150" ValueChanged="OnPassCountValueChanged" HorizontalOptions="Center"/>

                    <!-- Car Selection -->
                    <Label Text="Выбор автомобиля" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Picker x:Name="TravelCar" Title="Выберите автомобиль" ItemsSource="{Binding Cars}" SelectedItem="{Binding SelectedCar}" ItemDisplayBinding="{Binding CarModel}" HorizontalOptions="Center"/>

                    <!-- Comments -->
                    <Label Text="Примечание" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Editor x:Name="Comment" Placeholder="Добавьте комментарий..." HeightRequest="100"/>

                    <!-- Submit Button -->
                    <Button Text="Создать" BackgroundColor="Orange" BorderColor="Black" BorderWidth="1" TextColor="White" Margin="20" HorizontalOptions="Center" Clicked="AddTripClicked"/>
                </StackLayout>
            </Border>
        </ScrollView>
        <!-- Нижнее навигационное меню -->
        <local:Footer Grid.Row="2" />
    </Grid>
</ContentPage>
