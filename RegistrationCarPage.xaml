<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoStop.RegistrationCarPage"
             Title="RegistrationCar"
             BackgroundColor="#F0F0F0">
    <VerticalStackLayout>
        <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
            <Label Text="Введите ГосРегЗнак вашего автомобиля" FontSize="18" HorizontalOptions="Center" TextColor="Black"/>
            <Entry x:Name="EntryGRZ" Placeholder="ГосРегЗнак" FontSize="18" BackgroundColor="White" Margin="0,10,0,10" TextColor="Black"/>
            <Label Text="Введите модель вашего автомобиля" FontSize="18" HorizontalOptions="Center" TextColor="Black"/>
            <Entry x:Name="EntryCarMod" Placeholder="Модель машины" BackgroundColor="White" FontSize="18" Margin="0,10,0,10" TextColor="Black"/>
            <Label Text="Введите цвет вашего автомобиля" FontSize="18" HorizontalOptions="Center" TextColor="Black"/>
            <Entry x:Name="EntryCarCol" Placeholder="Цвет машины" FontSize="18" BackgroundColor="White" Margin="0,10,0,10" TextColor="Black"/>
            <Button Text="Завершить регистрацию" BackgroundColor="Orange" TextColor="White" Clicked="OnAddCarButtonClicked" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>