<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoStop.RegistrationDriverPage"
             Title="Регистрация документа">
    <VerticalStackLayout>
        <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
            <Label Text="Введите номер водительского удостоверения" FontSize="18" HorizontalOptions="Center" />
            <Entry x:Name="EntryCarPlate" Placeholder="Номер прав" FontSize="18" Margin="0,10,0,10" />
            <Button Text="Добавить авто" BackgroundColor="Orange" TextColor="White" Clicked="OnAddDocButtonClicked" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>